<div class="container">
  <div class="row">
    <div class="col-sm">
      <img src="https://media.gq.com/photos/59777f6a96d98d4091bcf6a5/master/pass/goodburger-20th-anniversary-.gif"
        id="waitingBurger" class="img-fluid" alt="Responsive image">
      <h2>Waiting to be Devoured!</h2>

      <ul style="list-style: none;">
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-sm">
      <h2>Create a burger!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger_name" id="enterBurgerNameLabel">Burger Name:</label>
          <input type="text" id="burger_name" name="name">
        </div>

        <div class="form-group">
          <label for="sleepy">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devour!<br>
          <input type="radio" name="devoured" value="0"> Wait to eat!
        </div>
        <button type="submit">Add Burger</button>
        <img src="https://media.giphy.com/media/6jnKmSpBoJLaw/giphy.gif" id="createBurger" class="img-fluid"
          alt="Responsive image">
      </form>
    </div>
    <div class="col-sm">
      <img src="https://i.imgur.com/PB1Q3L7.gif" class="img-fluid" id="devouredBurger" alt="Responsive image">
      <h2>Yumm Devoured!!!</h2>

      <ul style="list-style: none;">
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>